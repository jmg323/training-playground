pipeline {
    agent none
    stages {
        stage('build maven') {
        	agent { 
			dockerfile { 
				filename '04 - Dockerfile - maven - Multiple Agents using Dockerfile'
				dir '003 - Defining Execution Environments'
			}
		}
		steps {
			sh 'mvn --version'
		}
	}
        stage('build alpine') {
        	agent { 
			dockerfile { 
				filename '04 - Dockerfile - alpine - Multiple Agents using Dockerfile'
				dir '003 - Defining Execution Environments'
			}
		}
		steps {
			sh 'mvn --version'
		}
	}
     }
}
	     
