pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('clear') {
            steps {
	        sh "ls -lta"
		sh "git reset"
            }
	 }
	 stage('build') {
            steps {
	    	sh "ls -lta"
                sh "date >> data.txt"
		sh "ls -lta"
           }
        }
}
}
