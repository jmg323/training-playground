pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
        stage('build') {
            steps {
	    	sh "ls -lta"
                sh "date >> data.txt"
		sh "ls -lta"
            }
          }
	}
    post {
        // Clean after build
        	always {
            		cleanWs()
	    		sh "ls -lta"
		}
	}
    }

