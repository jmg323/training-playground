pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	
    parameters {
    choice(name: 'CHOICE', choices: ['build', 'test'], description: 'Chose your destiny')
    }	
	
    stages {
    	stage ('build')
		{
            	when {	
			expression { params.CHOICE == 'build' }
		}
			steps
			{
				filecreation("date1.txt")
				readfile("date1.txt")
			
			}
		}
    	stage ('test')
		{
		when {
			expression { params.CHOICE == 'test' }
		}
			steps
			{
			sh "echo excelent"
			}
		
		}
    }
}
}
def filecreation(filename='') { 
	sh "date >> $filename"
}
def readfile(filename='') { 
	sh "cat $filename"
}
