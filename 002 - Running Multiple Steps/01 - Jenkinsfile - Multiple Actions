pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    stages {
    	stage ('build')
		{
			steps
			{
				filecreation(date1.txt)
				readfile(date1.txt)
				sh 'sleep 10s'
				filecreation(date2.txt)
				readfile(date2.txt)				
			}
		}
    }

def filecreation(filename='') { 
	sh 'date >> $filename'
}
def readfile(filename='') { 
	sh 'cat $filename'
}
}
