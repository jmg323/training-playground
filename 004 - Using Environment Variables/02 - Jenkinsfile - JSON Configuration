pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
    environment {
        	JSON = '''[{ name: "java"
		command: "echo ola"
		},
		{ name: "c"
		command: "echo hello"
		}]
		'''
    }
    stages {
        stage('build') {
            steps {
                script {
                	def buildConfigs = readJSON text: "$JSON"
                	buildConfigs.each{ buildConfig ->
                		sh "echo '$buildConfig.name' && $buildConfig.command"
					}
                }
            }
        }
    }
}
