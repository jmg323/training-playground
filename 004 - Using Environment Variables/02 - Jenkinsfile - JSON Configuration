pipeline {
    agent { 
        docker { 
            image 'alpine:latest' 
        }
    }
    environment {
        BUILD_CONFIGS = '''
            [{
                name: "Java",
                command: "echo 'Java command!'"
            }, {
                name: "Node",
                command: "echo 'Node command!'"
            }]
        '''
    }
    stages {
        stage('build') {
            steps {
                script {
                    def buildConfigs = readJSON text: "$BUILD_CONFIGS"
                    buildConfigs.each{ buildConfig ->
                        sh "echo '$buildConfig.name' && $buildConfig.command"
                    }
                }
            }
        }
     }
}
